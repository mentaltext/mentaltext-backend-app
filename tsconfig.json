{
	"compilerOptions": {
		"target": "es2022",
		"module": "NodeNext",
    "moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"noImplicitAny": false,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./src",
		"removeComments": true,
		"noUnusedLocals": true,
		"allowJs": true,
		"checkJs": true,
		"paths": {
			"@/*": ["*"]
		}
	},
	"include": ["src"]
}
